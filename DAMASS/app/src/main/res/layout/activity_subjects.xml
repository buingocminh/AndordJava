<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_waveblue"
    tools:context=".Settings">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DAM ASSISTANT"
        android:gravity="center"
        android:textColor="@color/bluelight"
        android:textSize="45sp"
        android:textStyle="bold"
        android:layout_margin="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/thu"
        android:layout_below="@+id/textView1"
        android:hint="Nhập thứ"
        android:inputType="text"
        android:padding="10dp"
        android:layout_margin="8dp"
        android:background="@drawable/btn_background"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mamonhoc"
        android:layout_below="@+id/thu"
        android:hint="Nhập mã môn học"
        android:inputType="text"
        android:padding="10dp"
        android:layout_margin="8dp"
        android:background="@drawable/btn_background"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tenmonhoc"
        android:layout_below="@+id/mamonhoc"
        android:hint="Nhập tên môn học"
        android:inputType="text"
        android:padding="10dp"
        android:layout_margin="8dp"
        android:background="@drawable/btn_background"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lophocphan"
        android:layout_below="@+id/tenmonhoc"
        android:hint="Nhập lớp học phần"
        android:inputType="text"
        android:padding="10dp"
        android:layout_margin="8dp"
        android:background="@drawable/btn_background"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/giangvien"
        android:layout_below="@+id/lophocphan"
        android:hint="Nhập giảng viên"
        android:inputType="text"
        android:padding="10dp"
        android:layout_margin="8dp"
        android:background="@drawable/btn_background"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tiethoc"
        android:layout_below="@+id/giangvien"
        android:hint="Nhập tiết học"
        android:inputType="text"
        android:padding="10dp"
        android:layout_margin="8dp"
        android:background="@drawable/btn_background"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phonghoc"
        android:layout_below="@+id/tiethoc"
        android:hint="Nhập phòng học"
        android:inputType="text"
        android:padding="10dp"
        android:layout_margin="8dp"
        android:background="@drawable/btn_background"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/thoigian"
        android:layout_below="@+id/phonghoc"
        android:hint="Nhập thời gian học"
        android:inputType="text"
        android:padding="10dp"
        android:layout_margin="8dp"
        android:background="@drawable/btn_background"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addbtn"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/thoigian"
        android:text="Add Schedule"
        android:textColor="@color/white"
        android:background="@drawable/backgroud_bottom"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_create"
        android:layout_below="@+id/addbtn"
        android:src="@drawable/ic_create"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="300dp"
        android:clickable="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_create"
        android:layout_below="@+id/addbtn"
        android:src="@drawable/ic_delete"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="350dp"
        android:clickable="true"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-6dp"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu_navigation">
    </com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>